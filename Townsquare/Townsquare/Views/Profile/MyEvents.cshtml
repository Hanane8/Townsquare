@model IEnumerable<Townsquare.Models.Event>

@{
    ViewData["Title"] = "My Events";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-controller="Events" asp-action="Create">Create New Event</a>
</p>

@if (!Model.Any())
{
    <p>You haven't created any events yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Title)</th>
                <th>@Html.DisplayNameFor(model => model.First().StartUtc)</th>
                <th>@Html.DisplayNameFor(model => model.First().Location)</th>
                <th>@Html.DisplayNameFor(model => model.First().Category)</th>
                <th>RSVPs</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var isPast = item.StartUtc < DateTime.UtcNow;
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.StartUtc)</td>
                    <td>@Html.DisplayFor(modelItem => item.Location)</td>
                    <td>@Html.DisplayFor(modelItem => item.Category)</td>
                    <td>@item.RSVPs.Count</td>
                    <td>@(isPast ? "Past" : "Upcoming")</td>
                    <td>
                        <a asp-controller="Events" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        @{
                            var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
                            var canEdit = !isPast && (item.CreatedById == currentUserId || User.IsInRole("Admin"));
                            var canDelete = item.CreatedById == currentUserId || User.IsInRole("Admin");
                        }
                        @if (canEdit)
                        {
                            <text> | </text>
                            <a asp-controller="Events" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        }
                        @if (canDelete)
                        {
                            <text> | </text>
                            <a asp-controller="Events" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div>
    <a asp-action="Index">Back to Profile</a>
</div>
