@{
    ViewData["Title"] = "My Statistics";
}

<h1>My Statistics</h1>
<p class="text-muted">Your activity and engagement with TownSquare events</p>

<div class="row">
    <div class="col-md-6 col-lg-3 mb-4">
        <div class="card text-center">
            <div class="card-body">
                <h2 class="card-title text-primary">@ViewBag.EventsCreated</h2>
                <p class="card-text">Events Created</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-3 mb-4">
        <div class="card text-center">
            <div class="card-body">
                <h2 class="card-title text-success">@ViewBag.TotalRsvpsReceived</h2>
                <p class="card-text">RSVPs Received</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-3 mb-4">
        <div class="card text-center">
            <div class="card-body">
                <h2 class="card-title text-info">@ViewBag.EventsAttended</h2>
                <p class="card-text">Events Attended</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-3 mb-4">
        <div class="card text-center">
            <div class="card-body">
                <h2 class="card-title text-warning">@ViewBag.UpcomingEvents</h2>
                <p class="card-text">Upcoming Events</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Favorite Event Category</h5>
            </div>
            <div class="card-body">
                @if (ViewBag.FavoriteCategoryCount > 0)
                {
                    <h4 class="text-primary">@ViewBag.FavoriteCategory</h4>
                    <p class="text-muted">You've attended @ViewBag.FavoriteCategoryCount events in this category</p>
                }
                else
                {
                    <p class="text-muted">No events attended yet</p>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="MyEvents" class="btn btn-outline-primary">
                        <i class="fas fa-calendar-plus me-1"></i>My Created Events
                    </a>
                    <a asp-action="MyRsvps" class="btn btn-outline-success">
                        <i class="fas fa-handshake me-1"></i>My RSVPs
                    </a>
                    <a asp-action="EventHistory" class="btn btn-outline-info">
                        <i class="fas fa-history me-1"></i>Event History
                    </a>
                    <a asp-controller="Events" asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Create New Event
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i>Back to Profile
    </a>
    <a asp-controller="Events" asp-action="Index" class="btn btn-primary">
        <i class="fas fa-calendar me-1"></i>Browse All Events
    </a>
</div>
