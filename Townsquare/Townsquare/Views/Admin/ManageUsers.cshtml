@model IEnumerable<Townsquare.Models.User>

@{
    ViewData["Title"] = "Manage Users";
}

<div class="row">
    <div class="col-12">
        <h1 class="mb-4">Manage Users</h1>
    </div>
</div>

<!-- Search Form -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" asp-action="ManageUsers">
            <div class="row">
                <div class="col-md-8">
                    <input type="text" name="searchString" class="form-control" 
                           value="@ViewBag.SearchString" placeholder="Search by name or email...">
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary me-2">Search</button>
                    <a asp-action="ManageUsers" class="btn btn-secondary">Clear</a>
                </div>
            </div>
        </form>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <h4>No users found</h4>
        <p>Try adjusting your search criteria.</p>
    </div>
}
else
{
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Users (@Model.Count())</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Roles</th>
                            <th>Events Created</th>
                            <th>RSVPs</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            var userRoles = ViewBag.UserRoles[user.Id] as IList<string>;
                            <tr>
                                <td>
                                    <strong>@user.FullName</strong>
                                </td>
                                <td>@user.Email</td>
                                <td>
                                    @if (userRoles != null && userRoles.Any())
                                    {
                                        @foreach (var role in userRoles)
                                        {
                                            <span class="badge bg-primary me-1">@role</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">No roles</span>
                                    }
                                </td>
                                <td>
                                    @{
                                        var userStats = ViewBag.UserStats[user.Id] as (int eventsCreated, int rsvpsCount)?;
                                    }
                                    <span class="badge bg-info">@(userStats?.eventsCreated ?? 0)</span>
                                </td>
                                <td>
                                    <span class="badge bg-success">@(userStats?.rsvpsCount ?? 0)</span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="UserDetails" asp-route-id="@user.Id" 
                                           class="btn btn-sm btn-outline-primary">Details</a>
                                        <a asp-action="ManageRoles" asp-route-id="@user.Id" 
                                           class="btn btn-sm btn-outline-warning">Roles</a>
                                        <form asp-action="DeleteUser" method="post" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@user.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                    onclick="return confirm('Are you sure you want to delete this user? This action cannot be undone.')">
                                                Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
</div>
